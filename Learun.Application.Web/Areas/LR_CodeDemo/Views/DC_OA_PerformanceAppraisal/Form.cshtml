@{
    ViewBag.Title = "DC_OA_PerformanceAppraisal";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">排序<font face="宋体">*</font></div>
        <input id="F_Sort" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">父节点</div>
        <div id="F_ParentId"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">指标名称<font face="宋体">*</font></div>
        <input id="F_TargetName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">是否自填项<font face="宋体">*</font></div>
        <div id="F_IfTargetDefine" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">指标内容</div>
        <textarea id="F_TargetContent" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">考核目标</div>
        <input id="F_Target" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">评分说明</div>
        <textarea id="F_TargetExplain" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal">
        <div class="lr-form-item-title">指标分值<font face="宋体">*</font></div>
        <input id="F_TargetScore" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisal" style="display:none">
        <div class="lr-form-item-title">删除标记</div>
        <input id="F_IsDelete" value="0" type="text" class="form-control" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_PerformanceAppraisal/Form.js")
