@{
    ViewBag.Title = "DC_EngineProject_ProjectProgress";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">项目名称<font face="宋体">*</font></div>
        <div id="F_PIId" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">部门<font face="宋体">*</font></div>
        <div id="F_Department" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">月度</div>
        <input id="F_month" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">进度(%)<font face="宋体">*</font></div>
        <input id="F_proceedings" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">填写时间</div>
        <input id="F_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#F_time').trigger('change'); } })"   />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">汇报内容</div>
        <textarea id="F_summarize" class="form-control" style="height:100px;"  ></textarea>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">下月计划</div>
        <textarea id="F_plan" class="form-control" style="height:100px;"  ></textarea>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_EngineProject_ProjectProgress" >
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_remark" class="form-control" style="height:100px;"  ></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/ProjectManager/Views/DC_EngineProject_ProjectProgress/Form.js")
