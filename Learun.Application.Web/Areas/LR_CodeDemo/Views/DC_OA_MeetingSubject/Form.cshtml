@{
    ViewBag.Title = "专题会议内容申请";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">汇报单位</div>
        <input id="F_ReportCompany" type="text"  class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">申请日期</div>
        <input id="F_CreateDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_CreateDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">议题</div>
        <textarea id="F_Content" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">是否人事议题</div>
        <div id="F_IsHRSub"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">申报缘由</div>
        <textarea id="F_ReplyReason" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">协调情况</div>
        <textarea id="F_DealSituation" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">图片</div>
        <div id="F_Image"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">汇报材料</div>
        <div id="F_Files"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">汇报人</div>
        <input id="F_CreateUserId" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">联系电话</div>
        <input id="F_Telephone" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">列席单位</div>
        <input id="F_AttendCompany" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_MeetingSubject">
        <div class="lr-form-item-title">预计时长(分钟)</div>
        <input id="F_MeetingDuring" type="text" class="form-control" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_MeetingSubject/Form.js")
