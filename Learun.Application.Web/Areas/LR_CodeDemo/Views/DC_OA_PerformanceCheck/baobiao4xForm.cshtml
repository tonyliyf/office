@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">员工</div>
        <div id="F_CheckUserid" disabled="disabled"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">考核类别</div>
        <input id="F_Position" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">基准分</div>
        <input id="F_BaseNumber" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">绩效小组扣分</div>
        <input id="F_JixaoNumber" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">上级领导扣分</div>
        <input id="F_CheckNumber" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">扣分合计</div>
        <input id="F_KofenNum" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">加分</div>
        <input id="F_AddNumber" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">最终得分</div>
        <input id="F_JiafenNum" type="text" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">扣分说明</div>
        <textarea readonly="readonly" id="F_RecNumberComments" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceCheck">
        <div class="lr-form-item-title">加分说明</div>
        <textarea readonly="readonly" id="F_AddNumberComments" class="form-control" style="height:100px;"></textarea>
    </div>
</div>
