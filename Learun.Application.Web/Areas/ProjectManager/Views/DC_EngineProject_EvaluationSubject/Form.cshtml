@{
    ViewBag.Title = "项目评价科目";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_EvaluationSubject">
        <div class="lr-form-item-title">评价科目<font face="宋体">*</font></div>
        <input id="F_ProjectEvaluationItem" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_EvaluationSubject">
        <div class="lr-form-item-title">父级科目</div>
        <div id="F_ProjectEvaluationParentId"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_EvaluationSubject">
        <div class="lr-form-item-title">科目总分</div>
        <input id="F_EvaluationScore" type="text" class="form-control" />
    </div>

    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_EvaluationSubject">
        <div class="lr-form-item-title">排序号</div>
        <input id="F_Sort" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_EvaluationSubject">
        <div class="lr-form-item-title">评价内容</div>
        <textarea id="F_ProjectEvaluationContent" class="form-control" style="height:100px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/ProjectManager/Views/DC_EngineProject_EvaluationSubject/Form.js")
