@{
    ViewBag.Title = "ExtraWorkReq_Edit";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="ExtraWorkReq">
        <div class="lr-form-item-title">申请人</div>
        <input id="F_Applicant" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">岗位</div>
        <input id="txt_post" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">分部</div>
        <input id="F_CompanyId" type="text" readonly class="form-control currentInfo lr-currentInfo-company" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="ExtraWorkReq">
        <div class="lr-form-item-title">部门</div>
        <input id="F_Dept" type="text" readonly class="form-control currentInfo lr-currentInfo-department" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="ExtraWorkReq">
        <div class="lr-form-item-title">开始时间</div>
        <input id="F_StartDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm:ss',onpicked: function () { $('#F_StartDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="ExtraWorkReq">
        <div class="lr-form-item-title">结束时间</div>
        <input id="F_EndDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm:ss',onpicked: function () { $('#F_EndDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="ExtraWorkReq">
        <div class="lr-form-item-title">加班类型</div>
        <div id="F_Type"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="ExtraWorkReq">
        <div class="lr-form-item-title">加班时长</div>
        <input id="F_Duration" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="ExtraWorkReq">
        <div class="lr-form-item-title">加班事由</div>
        <textarea id="F_Reason" class="form-control" style="height:100px;"></textarea>
    </div>
</div>
<style>
    .laydate-time-list > li:nth-child(3) {
        display: none;
    }

    .layui-laydate-list > li {
        width: 50% !important
    }
</style>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/ExtraWorkReq_Edit/Form.js")
