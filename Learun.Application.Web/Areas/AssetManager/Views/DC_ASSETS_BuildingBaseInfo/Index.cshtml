    ViewBag.Title = "DC_ASSETS_BuildingBaseInfo";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="lr-layout ">
    <div class="lr-layout-center">
        <div class="lr-layout-wrap lr-layout-wrap-notitle ">
            <div class="lr-layout-tool">
                <div class="lr-layout-tool-center">
                    <div class="lr-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="lr-query-formcontent">
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">建筑名称</div>
                                    <input id="F_ConstructionName" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">地址名称</div>
                                    <input id="F_Address" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">使用状况</div>
                                    <input id="F_UseSituation" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">原管理单位</div>
                                    <div id="F_FormerUnit"></div>
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">经营性质</div>
                                    <div id="F_BuildingClass"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="lr-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="lr_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="lr_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="lr_export" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;excel导入</a>
                        <a id="lr-export1" class="btn btn-default"><i class="fa fa-print"></i>&nbsp;导出</a>
                        <a id="lr_file" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;查看附件</a>
                        <a id="lr_file1" class="btn btn-default"><i class="fa fa-eye"></i>&nbsp;查看附件图片</a>
                    </div>
                </div>
            </div>
            <div class="lr-layout-body" id="gridtable" style="height:45%"></div>
            <div class="lr-layout-body" style="height:55%">
                <div class="lr-form-tabs" id="lr_form_tabs" style="height:44px;position:absolute;width:100%;top:0;center:0;padding:5px 5px 0 5px">
                    <ul class="nav nav-tabs">
                        <li><a data-value="tab1">房屋信息管理</a></li>
                        <li><a data-value="tab2">地图信息</a></li>
                    </ul>
                </div>
                <div class="tab-content lr-tab-content" id="lr_tab_content" style="position:relative;width:100%;height:100%;">
                    <div class="lr-form-wrap tab-pane" id="tab1">
                        <iframe id="ifr1" src="../DC_ASSETS_HouseInfo/Index?keyValue=1" style="width:100%;height:100%;border:none"></iframe>
                    </div>
                    <div class="lr-form-wrap tab-pane" id="tab2">
                        <iframe id="ifr2" src="./MapForm?keyValue=1&look=1" style="width:100%;height:100%;border:none"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .lr-form-wrap {
        width: 100%;
        height: 100%;
    }
</style>
