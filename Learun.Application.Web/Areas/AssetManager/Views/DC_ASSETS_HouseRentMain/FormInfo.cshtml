@{
    ViewBag.Title = "DC_ASSETS_HouseRentDetail";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style>
    .but_qr {
        border-color: #4898d5;
        background-color: #2e8ded;
        color: #fff;
        float: right;
        height: 23px;
        margin: 4px 6px 0 0;
        width: 58px;
        text-align: center;
        line-height: 23px;
        border-radius: 3px;
        margin-right: 13px;
        margin-bottom: 3px;
        margin-top: -20px;
    }
</style>
<div class="lr-form-tabs" id="lr_form_tabs">
    <ul class="nav nav-tabs">
        <li><a data-value="tab1">房屋招租信息</a></li>
        <li><a data-value="tab2">房屋租赁信息</a></li>
        

    </ul>
</div>
<div class="tab-content lr-tab-content" id="lr_tab_content">
    <div class="lr-form-wrap tab-pane" id="tab1">
        <div class="col-xs-12 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">招租计划</div>
            <div id="F_HRMId"></div>
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">房屋名称</div>
            <div id="F_HouseID"></div>
        </div>

    
        <div class="col-xs-6 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">建筑面积<font face="宋体">*</font></div>
            <input id="F_RentArea" type="text" class="form-control" />
        </div>

     
        
        <div class="col-xs-6 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">招租底价(元)<font face="宋体">*</font></div>
            <input id="F_RentReservePrice" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
        </div>

        <div class="col-xs-6 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">竞租保证金(元)</div>
            <input id="F_RentDeposit" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">坐落位置<font face="宋体">*</font></div>
            <input id="F_Location" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">租赁状态</div>
            <div id="F_LeaseState"></div>
        </div>

        <div class="col-xs-6 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">租赁合同</div>
            <input id="F_RentContractNo" type="text" class="form-control" />

        </div>

        <div class="col-xs-12 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">备注</div>
            <textarea id="F_Remarks" class="form-control" style="height:50px;"></textarea>
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_ASSETS_HouseRentDetail">
            <div class="lr-form-item-title">附件</div>
            <div id="F_DetailFiles"></div>
        </div>
    </div>
    <div class="lr-form-wrap tab-pane" id="tab2">
        <div class="col-xs-12 lr-form-item lr-form-item-grid">

            <div id="DC_ASSETS_HouseRentDetail_Info" ></div>

        </div>
    </div>

   

</div>
    @Html.AppendJsFile("/Areas/AssetManager/Views/DC_ASSETS_HouseRentMain/FormInfo.js")
