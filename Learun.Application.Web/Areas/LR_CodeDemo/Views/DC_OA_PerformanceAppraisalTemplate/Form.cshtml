@{
    ViewBag.Title = "DC_OA_PerformanceAppraisalTemplate";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate">
        <div class="lr-form-item-title">模板编号</div>
        <input id="F_TemplateCode" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate">
        <div class="lr-form-item-title">模板名称<font face="宋体">*</font></div>
        <input id="F_TemplateName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate">
        <div class="lr-form-item-title">考核周期<font face="宋体">*</font></div>
        <div id="F_AppraisalCycleType" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate">
        <div class="lr-form-item-title">考核总分<font face="宋体">*</font></div>
        <input id="F_PATTotalScore" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate" style="display:none">
        <div class="lr-form-item-title">当前部门</div>
        <input id="F_PATDepartmentId" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate" style="display:none">
        <div class="lr-form-item-title">当前日期</div>
        <input id="F_PATCreateDate" type="text" readonly class="form-control lr-currentInfo-time" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate" style="display:none">
        <div class="lr-form-item-title">当前用户</div>
        <input id="F_PATUserId" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate" style="display:none">
        <div class="lr-form-item-title">启用标识</div>
        <input id="F_IfEnable" value="0" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceAppraisalTemplate" style="display:none">
        <div class="lr-form-item-title">删除标识<font face="宋体">*</font></div>
        <input id="F_IsDelete" value="0" type="text" class="form-control" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_PerformanceAppraisalTemplate/Form.js")
