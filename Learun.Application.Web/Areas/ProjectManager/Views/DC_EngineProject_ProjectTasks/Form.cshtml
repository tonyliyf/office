@{
    ViewBag.Title = "DC_EngineProject_ProjectTasks";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">任务编号</div>
        <input id="F_TaskItemNumber" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">任务名称</div>
        <input id="F_TaskName" type="text" class="form-control" />
    </div>
    
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">任务状态</div>
        <div id="F_TaskState"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">是否里程碑</div>
        <div id="F_IfMilestone"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">任务负责部门</div>
        <div id="F_TaskDepartment"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">任务负责人</div>
        <div id="F_TaskLeader"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">计划开始时间</div>
        <input id="F_PlannedStartDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_PlannedStartDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">计划结束时间</div>
        <input id="F_PlannedEndDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_PlannedEndDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">项目阶段<font face="宋体">*</font></div>
        <div id="F_ProjectStage" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">附件</div>
        <div id="F_Attachments"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectTasks">
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Remarks" class="form-control" style="height:100px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/ProjectManager/Views/DC_EngineProject_ProjectTasks/Form.js")
