@{
    ViewBag.Title = "EvectionReq_Edit";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">姓名</div>
        <input id="F_UserId" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">岗位</div>
        <input id="txt_post" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">分部</div>
        <input id="F_CompanyId" type="text" readonly class="form-control currentInfo lr-currentInfo-company" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">部门</div>
        <input id="F_Dept" type="text" readonly class="form-control currentInfo lr-currentInfo-department" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">紧急程度</div>
        <div id="F_Degree"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">外出类型<font face="宋体">*</font></div>
        <div id="F_OutType" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">单程往返<font face="宋体">*</font></div>
        <div id="F_Return" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">交通方式<font face="宋体">*</font></div>
        <div id="F_Traffice" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-4 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">出发地<font face="宋体">*</font></div>
        <input id="F_FromPlace" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>

    <div class="col-xs-4 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">途经地</div>
        <input id="F_MidPlace" type="text" class="form-control"  />
    </div>
    <div class="col-xs-4 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">目的地<font face="宋体">*</font></div>
        <input id="F_ToPlace" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">起始日期</div>
        <input id="F_StartDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_StartDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">时间<font face="宋体">*</font></div>
        <div id="select1" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">结束日期</div>
        <input id="F_EndDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_EndDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">时间<font face="宋体">*</font></div>
        <div id="select2" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">出差时间<font face="宋体">*</font></div>
        <input id="F_OutDays" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">附件</div>
        <div id="F_File"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="EvectionReq">
        <div class="lr-form-item-title">出差原因</div>
        <textarea id="F_OutReason" class="form-control" style="height:200px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/EvectionReq_Edit/Form.js")
