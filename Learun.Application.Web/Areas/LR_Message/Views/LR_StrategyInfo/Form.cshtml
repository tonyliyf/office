@{
    ViewBag.Title = "消息策略";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">策略名称<font face="宋体">*</font></div>
        <input id="F_StrategyName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">策略编码<font face="宋体">*</font></div>
        <input id="F_StrategyCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">发送角色</div>
        <div id="F_SendRole" type="text"></div>
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">消息类型<font face="宋体">*</font></div>
        <div id="F_MessageType" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">排序序号</div>
        <input id="F_Sort" type="text" class="form-control" />

    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">临近间隔(时）</div>
        <input id="F_ExecuteTimeBefore" type="text" class="form-control" />

    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">逾期超出(时)</div>
        <input id="F_ExecuteTimeOut" type="text" class="form-control" />

    </div>

    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">消息图标路径</div>
        <input id="F_ImageUrl" type="text" class="form-control" />

    </div>


    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">菜单是否显示</div>
        <div class="radio lr-radio" type="lr-radio" id="F_IsShow">
            <label>
                <input name="F_ISShowLevel" type="radio" value="0" checked="checked" />
                不显示
            </label>
            <label>
                <input name="F_ISShowLevel" type="radio" value="1" checked="checked" />
                显示
            </label>
        </div>
    </div>

    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">Corn表达式</div>

        <input id="F_CornTimes" type="text" class="form-control" />

    </div>

    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">发送次数</div>
        <input id="F_SendTimes" type="text" class="form-control" />

    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">程序集名称</div>
        <input id="F_Assembly" type="text" class="form-control" />

    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">命名空间+类名</div>
        <input id="F_ClassName" type="text" class="form-control" />

    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">方法名</div>
        <input id="F_Method" type="text" class="form-control" />

    </div>

    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Description" type="text" class="form-control" style="height:100px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_Message/Views/LR_StrategyInfo/Form.js")
