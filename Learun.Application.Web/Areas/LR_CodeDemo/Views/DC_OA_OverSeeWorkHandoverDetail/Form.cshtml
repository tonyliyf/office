@{
    ViewBag.Title = "DC_OA_OverSeeWorkHandoverDetail";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">编 码</div>
        <input id="F_OSWCode" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">牵头部门<font face="宋体">*</font></div>
        <div id="F_DepartmentId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">负责人<font face="宋体">*</font></div>
        <div id="F_LeaderUserId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">责任领导<font face="宋体">*</font></div>
        <div id="F_HighLeaderId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">督办人<font face="宋体">*</font></div>
        <div id="F_OverSeeUserId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">督办分类</div>
        <div id="F_OSWType"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">开始时间<font face="宋体">*</font></div>
        <input id="F_BeginDate" type="text" isvalid="yes" checkexpession="NotNull" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_BeginDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">结束时间<font face="宋体">*</font></div>
        <input id="F_EndDate" type="text" isvalid="yes" checkexpession="NotNull"  class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_EndDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">工作事项<font face="宋体">*</font></div>
        <textarea id="F_OSWContent" class="form-control" isvalid="yes" checkexpession="NotNull"  style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Marks" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_OverSeeWorkHandoverDetail">
        <div class="lr-form-item-title">附件</div>
        <div id="F_Attachments"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_OverSeeWorkHandoverDetail/Form.js")
