@{
    ViewBag.Title = "DC_OA_PartyMember";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="lr-form-tabs" id="lr_form_tabs">
    <ul class="nav nav-tabs">
        <li><a data-value="tab1">党员基本信息</a></li>
        <li><a data-value="tab2">党员家属信息</a></li>
    </ul>
</div>
<div class="tab-content lr-tab-content" id="lr_tab_content">
    <div class="lr-form-wrap tab-pane" id="tab1"> 
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">用户</div>
            <div id="F_UserId"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">性别</div>
            <div id="F_Gender"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">民族</div>
            <div id="F_Nation"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">籍贯</div>
            <input id="F_NativePlace" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">生日</div>
            <input id="F_Birthday" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_Birthday').trigger('change'); } })" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">婚姻状况</div>
            <div id="F_MaritalStatus"></div>
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">毕业院校及专业</div>
            <input id="F_Majors" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">学历学位</div>
            <div id="F_Degree"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">申请入党时间</div>
            <input id="F_ApplyPartyTime" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_ApplyPartyTime').trigger('change'); } })" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">入党时间</div>
            <input id="F_JoinPartyTime" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_JoinPartyTime').trigger('change'); } })" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">党组织<font face="宋体">*</font></div>
            <div id="F_PartyBranchGUID" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">党内职务</div>
            <div id="F_PartyDutiesName"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">参加工作时间</div>
            <input id="F_JoinWorkTime" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_JoinWorkTime').trigger('change'); } })" />
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">工作单位</div>
            <input id="F_CompanyDuties" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">职业类型</div>
            <div id="F_OccupationType"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">户籍所在地</div>
            <input id="F_CensusRegister" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">身份证</div>
            <input id="F_IDCardNO" type="text" class="form-control" />
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">家庭住址</div>
            <input id="F_HomeAddress" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">联系方式</div>
            <input id="F_ContactInfo" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">电话号码</div>
            <input id="F_PhoneNumber" type="text" class="form-control" isvalid="yes" checkexpession="MobileOrNull" />
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">电子邮箱</div>
            <input id="F_EMail" type="text" class="form-control" isvalid="yes" checkexpession="EmailOrNull" />
        </div>
        <div class="col-xs-12 lr-form-item" data-table="DC_OA_PartyMember">
            <div class="lr-form-item-title">备注</div>
            <input id="F_Remark" type="text" class="form-control" />
        </div>
    </div>
    <div class="lr-form-wrap tab-pane" id="tab2">
        <div class="col-xs-12 lr-form-item lr-form-item-grid">
            <div id="DC_OA_PartyMemberDependents"></div>
        </div>
    </div>
</div>

@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_PartyMember/Form.js")
