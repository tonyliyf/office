@{
    ViewBag.Title = "DC_OA_PerformanceUserWorkInterview";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
   <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">部门<font face="宋体">*</font></div>
        <div id="F_BeInterviewDepartment" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">被面谈人姓名<font face="宋体">*</font></div>
        <div id="F_BeInterviewUser" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">岗位</div>
        <input id="F_BeInterviewPost" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">面谈人姓名<font face="宋体">*</font></div>
        <div id="F_InterviewUser" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">面谈时间</div>
        <input id="F_InterviewDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_InterviewDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">面谈地点</div>
        <input id="F_InterviewAddress" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">上周绩效情况</div>
        <textarea id="F_InterviewContentA" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">考核周期成绩</div>
        <textarea id="F_InterviewContentB" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">考核周期工作改进方案</div>
        <textarea id="F_InterviewContentC" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PerformanceUserWorkInterview">
        <div class="lr-form-item-title">计划是否一致</div>
        <div id="F_InterviewContentD"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_PerformanceUserWorkInterview/Form.js")
