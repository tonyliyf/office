@{
    ViewBag.Title = "电子签章信息管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span>用章管理</span>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_OA_Sign" >
        <div class="lr-form-item-title">名称<font face="宋体">*</font></div>
        <input id="DC_OA_SignName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_OA_Sign" >
        <div class="lr-form-item-title">类型<font face="宋体">*</font></div>
        <div id="DC_OA_Type" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_OA_Sign" >
        <div class="lr-form-item-title">使用密码</div>
        <input id="DC_OA_UsePwd" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_OA_Sign" >
        <div class="lr-form-item-title">电子签章</div>
        <div id="F_SignImagFile"  ></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_OA_Sign" >
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Description" class="form-control" style="height:150px;"  ></textarea>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_OA_Sign" >
        <div class="lr-form-item-title">当前信息</div>
        <input id="F_CreateUserId" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_Sign/Form.js")
