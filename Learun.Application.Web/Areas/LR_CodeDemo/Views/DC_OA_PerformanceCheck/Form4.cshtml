@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style>
    .bd_th {
        width: 15%;
        line-height: 20px;
        padding: 25px 3px 25px 3px;
    }

    .che_ovh {
        line-height: 24px;
    }
</style>
<div class="bd_home" style="">
    <div class="bd_tit" style="text-align:center">
        金润源集团公司
        <input id="i1" class="user-edit bd_inp" type="text" style="width: 50px;margin-top: 8px;text-align:center;" class="bd_inp" />
        年度绩效考核评价表(部室负责人)
    </div>
    <table id="edittable" border="1" width="100%" style="border-collapse:collapse;" cellspacing="" cellpadding="">
        <tr class="bd_tr">
            <th class="bd_th none-edit" style="">被考核人</th>
            <th class="bd_th" id="t0" style="">@ViewBag.name</th>
            <th class="bd_th" style="" colspan="2">考核周期</th>
            <th class="bd_th" style="" colspan="3">
                <input id="i2" class="user-edit bd_inp" type="text" style="width: 28px;height:20px;margin-top: 8px;" />年
                <input id="i3" class="user-edit bd_inp" type="text" style="width: 15px;height:20px;margin-top: 8px;" />月
                <input id="i4" class="user-edit bd_inp" type="text" style="width: 15px;height:20px;margin-top: 8px;" />日---
                <input id="i5" class="user-edit bd_inp" type="text" style="width: 15px;height:20px;margin-top: 8px;" />月
                <input id="i6" class="user-edit bd_inp" type="text" style="width: 15px;height:20px;margin-top: 8px;" />日
            </th>
        </tr>
        <tr class="bd_tr">
            <th class="bd_th">类别</th>
            <th class="bd_th">指标内容描述</th>
            <th class="bd_th">分值</th>
            <th class="bd_th">达成情况</th>
            <th class="bd_th">评分</th>
            <th class="bd_th">评分说明</th>
            <th class="bd_th">备注</th>
        </tr>
        <tr class="bd_tr">
            <th class="bd_th" rowspan="2">业务指标</th>
            <th class="bd_th" style="text-align: left;">承接集团公司的年度经济指标和社会指标项目</th>
            <th id="t1" class="bd_th checker-edit"></th>
            <th id="t2" class="bd_th checker-edit"></th>
            <th id="t3" class="bd_th checker-edit score"></th>
            <th id="t4" class="bd_th checker-edit"></th>
            <th id="t5" class="bd_th checker-edit"></th>
        </tr>
        <tr class="bd_tr">
            <th class="bd_th" style="text-align: left;">纳入考核的重点督办项目</th>
            <th id="t6" class="bd_th checker-edit"></th>
            <th id="t7" class="bd_th checker-edit"></th>
            <th id="t8" class="bd_th checker-edit score"></th>
            <th id="t9" class="bd_th checker-edit"></th>
            <th id="t10" class="bd_th checker-edit"></th>
        </tr>
        <tr class="bd_tr">
            <th class="bd_th" rowspan="2">共性指标</th>
            <th class="bd_th" style="text-align: left;">企业管理指标(制度建设、治理结构)</th>
            <th id="t11" class="bd_th checker-edit"></th>
            <th id="t12" class="bd_th checker-edit"></th>
            <th id="t13" class="bd_th checker-edit score"></th>
            <th id="t14" class="bd_th checker-edit"></th>
            <th id="t15" class="bd_th checker-edit"></th>
        </tr>
        <tr class="bd_tr">
            <th class="bd_th" style="text-align: left;">意识形态工作</th>
            <th id="t16" class="bd_th checker-edit"></th>
            <th id="t17" class="bd_th checker-edit"></th>
            <th id="t18" class="bd_th checker-edit score"></th>
            <th id="t19" class="bd_th checker-edit"></th>
            <th id="t20" class="bd_th checker-edit"></th>
        </tr>
        <tr class="bd_tr">
            <th class="bd_th" colspan="2">合计得分</th>
            <th id="t21" class="bd_th none-edit" colspan="5"></th>
        </tr>
        <tr class="bd_tr">
            <th class="bd_th" colspan="1">考核结果确认</th>
            <th class="bd_th" colspan="6">
                <div class="che_ovh">
                    <span style="float: left;">被考核人： </span>
                    <input type="text" style="width: 50px;margin-top: 4px;" class="bd_inp" />
                </div>
                <div class="che_ovh" style="margin-right: 0px;">
                    <span style="float: left;">被考核人： </span>
                    <input type="text" style="width: 50px;margin-top: 4px;" class="bd_inp" />
                </div>
            </th>
        </tr>
    </table>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_PerformanceCheck/Form4.js")
@Html.AppendJsFile("/Content/edittable/edittable.js")
@Html.AppendCssFile("/Content/edittable/bd.css")
