@{
    ViewBag.Title = "DC_OA_PurchasePublic";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">采购项目</div>
        <input id="F_PurchaseName" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">项目编号</div>
        <input id="F_PurchaseProjectNo" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">采购单位<font face="宋体">*</font></div>
        <input id="F_CurrentCompanyName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">采购部门</div>
        <input id="F_CurrentDeptName" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">交易方式</div>
        <input id="F_PurchaseMethod" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">交易平台</div>
        <input id="F_buyPlatform" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">交易预算(万元)</div>
        <input id="F_DealMoney" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">采购经办人</div>
        <input id="F_CreateUserName" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">联系电话</div>
        <input id="F_DealUserPhone" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">工作人员</div>
        <input id="F_ModifyUserId" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_OA_PurchasePublic">
        <div class="lr-form-item-title">时间</div>
        <input id="F_ModifyDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_ModifyDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-12 lr-form-item lr-form-item-grid">
        <div id="DC_OA_PurchasePublicDetail"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_PurchasePublic/Form.js") 