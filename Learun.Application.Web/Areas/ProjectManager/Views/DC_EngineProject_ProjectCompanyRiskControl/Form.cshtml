@{
    ViewBag.Title = "DC_EngineProject_ProjectCompanyRiskControl";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectCompanyRiskControl" >
        <div class="lr-form-item-title">工程项目</div>
        <div id="F_PIId"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectCompanyRiskControl" >
        <div class="lr-form-item-title">填表时间<font face="宋体">*</font></div>
        <input id="F_PCRCDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_PCRCDate').trigger('change'); } })"  isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectCompanyRiskControl" >
        <div class="lr-form-item-title">填写单位<font face="宋体">*</font></div>
        <div id="F_PCRCDepartment"   isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_EngineProject_ProjectCompanyRiskControl" >
        <div class="lr-form-item-title">负责人<font face="宋体">*</font></div>
        <div id="F_PCRCUser"   isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_EngineProject_ProjectCompanyRiskControl" >
        <div class="lr-form-item-title">主要职能</div>
        <input id="F_MainFunctions" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_EngineProject_ProjectCompanyRiskControl" >
        <div class="lr-form-item-title">廉政风险点</div>
        <input id="F_RiskPoint" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_EngineProject_ProjectCompanyRiskControl" >
        <div class="lr-form-item-title">廉政风险防控措施</div>
        <input id="F_RiskControlMeasures" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectCompanyRiskControl">
        <div class="lr-form-item-title">子公司负责人意见</div>
        <textarea id="F_ChargeOpinion" class="form-control" style="height:80px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectCompanyRiskControl">
        <div class="lr-form-item-title">集团分管领导意见</div>
        <textarea id="F_LeaderOpinion" class="form-control" style="height:80px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/ProjectManager/Views/DC_EngineProject_ProjectCompanyRiskControl/Form.js")
