@{
    ViewBag.Title = "广告牌维修记录";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item" data-table="formtable_main_120">
        <div class="lr-form-item-title">广告牌名称</div>
        <textarea id="F_BillboardsName" class="form-control" style="height:100px;"></textarea>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="formtable_main_120">
        <div class="lr-form-item-title">地址</div>
        <input id="F_InstallationLocation" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="formtable_main_120">
        <div class="lr-form-item-title">申请人</div>
        <input id="lastname" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="formtable_main_120">
        <div class="lr-form-item-title">维修金额</div>
        <input id="yjwxje" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="formtable_main_120">
        <div class="lr-form-item-title">申请时间</div>
        <input id="rq" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd', onpicked: function () { $('#rq').trigger('change'); } })" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="formtable_main_120">
        <div class="lr-form-item-title">故障描述</div>
        <textarea id="gzms" class="form-control" style="height:100px;"></textarea>
    </div>

</div>
@Html.AppendJsFile("/Areas/EcologyDemo/Views/BusStopBillboardsRepairRecord/Form.js")
