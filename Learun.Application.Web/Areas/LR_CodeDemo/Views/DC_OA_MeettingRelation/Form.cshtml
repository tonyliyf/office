@{
    ViewBag.Title = "会议通知回执";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-6 lr-form-item"  data-table="DC_OA_MeettingRelation" >
        <div class="lr-form-item-title">会议类型</div>
        <div id="MeettingType"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_OA_MeettingRelation" >
        <div class="lr-form-item-title">会议时间</div>
        <input id="F_StartDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_StartDate').trigger('change'); } })"   />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_OA_MeettingRelation" >
        <div class="lr-form-item-title">会议主题</div>
        <textarea id="F_Title" class="form-control" style="height:100px;"  ></textarea>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_OA_MeettingRelation" >
        <div class="lr-form-item-title">是否参加</div>
        <div id="IsJoin"></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_OA_MeettingRelation" >
        <div class="lr-form-item-title">不参加原因</div>
        <textarea id="F_Reason" class="form-control" style="height:100px;"  ></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/DC_OA_MeettingRelation/Form.js")
