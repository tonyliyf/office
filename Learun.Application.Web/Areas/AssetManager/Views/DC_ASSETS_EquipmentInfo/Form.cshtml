@{
    ViewBag.Title = "DC_ASSETS_EquipmentInfo";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">资产编号</div>
        <input id="F_EquipmentNumber" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">设备名称<font face="宋体">*</font></div>
        <input id="F_EquipmentName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">规格型号</div>
        <input id="F_SpecificationType" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">设备类别<font face="宋体">*</font></div>
        <div id="F_EquipmentCategory" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">生产厂商</div>
        <div id="F_Manufacturer"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">资源原值</div>
        <input id="F_OriginalValueAssets" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">总功率（KW）</div>
        <input id="F_TotalPowerKW" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">经销商</div>
        <div id="F_Distributor"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">设备标识</div>
        <div id="F_DeviceIdentification"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">购置时间<font face="宋体">*</font></div>
        <input id="F_AcquisitionTime" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_AcquisitionTime').trigger('change'); } })"  isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">使用部门<font face="宋体">*</font></div>
        <div id="F_UseDepartmentId" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">资产负责人</div>
        <div id="F_LeaderId"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">操作人</div>
        <div id="F_OperatorId"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">净残值</div>
        <input id="F_NetSalvageValue" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">安装地点</div>
        <input id="F_InstallationLocation" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">折旧方法</div>
        <div id="F_DepreciationMethod"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">折旧年限</div>
        <input id="F_UsefulYear" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">本月折旧</div>
        <input id="F_DepreciationThisMonth" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">累计折旧</div>
        <input id="F_AccumulatedDepreciation" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">图片附件</div>
        <div id="F_PictureAccessories"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">使用状态<font face="宋体">*</font></div>
        <div id="F_UseState" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="DC_ASSETS_EquipmentInfo" >
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Remarks" class="form-control" style="height:100px;"  ></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/AssetManager/Views/DC_ASSETS_EquipmentInfo/Form.js")
