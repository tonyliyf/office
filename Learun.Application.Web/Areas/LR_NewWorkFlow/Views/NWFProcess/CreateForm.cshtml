@{
    ViewBag.Title = "创建流程";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style>
    .lr-select-option {
        width: 296px !important;
    }
</style>
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">流程标题<font face="宋体">*</font></div>
        <input id="F_Title" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title" id="F_LevelTitle">重要等级</div>
        <div class="radio lr-radio" type="lr-radio" id="F_Level">
            <label>
                <input name="processLevel" type="radio" value="0" checked="checked" />
                普通
            </label>
            <label>
                <input name="processLevel" type="radio" value="1" />
                重要
            </label>
            <label>
                <input name="processLevel" type="radio" value="2" />
                紧急
            </label>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_NewWorkFlow/Views/NWFProcess/CreateForm.js")
