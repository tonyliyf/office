@{
    ViewBag.Title = "DC_EngineProject_ProjectInfo";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">项目编号<font face="宋体">*</font></div>
        <input id="F_ProjectItemNumber" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">立项编号<font face="宋体">*</font></div>
        <input id="F_ProjectYear" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">项目建设类型<font face="宋体">*</font></div>
        <div id="F_ProjectBuildType" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">投资金额(万元）</div>
        <input id="F_EngineeringCost" type="text" class="form-control"/>
    </div>

    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">项目名称</div>
        <input id="F_ProjectName" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">行政区划</div>
        <div id="F_area" class="col-xs-12 lr-form-area">
            <div id="F_ProvinceId" placeholder="省" class="col-xs-3"></div>
            <div id="F_CityId" placeholder="市" class="col-xs-3"></div>
            <div id="F_CountyId" placeholder="县" class="col-xs-3"></div>
            <div id="F_CommunityCode" placeholder="区" class="col-xs-3"></div>
        </div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">项目状态<font face="宋体">*</font></div>
        <div id="F_ProjectState" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">立项日期<font face="宋体">*</font></div>
        <input id="F_ProjectApprovalDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_ProjectApprovalDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">计划开工时间<font face="宋体">*</font></div>
        <input id="F_PlannedStartDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_PlannedStartDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">计划完工时间</div>
        <input id="F_PlannedEndDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_PlannedEndDate').trigger('change'); } })" />
    </div>

    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">项目所属公司<font face="宋体">*</font></div>
        <div id="F_JRYCompany" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <span><i class="fa fa-map-marker"></i></span>
        <input id="btn_area" type="button" class="btn btn-primary lrUploader-input-btn" value="选择区域" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">项目地址<font face="宋体">*</font></div>
        <input id="F_ProjectAddress" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Remarks" class="form-control" style="height:100px;"></textarea>
    </div>
    <div id="num" class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectInfo">
        <div class="lr-form-item-title">记录时间</div>
        <input id="F_CreateDatetime" type="text" readonly class="form-control currentInfo lr-currentInfo-time" />
    </div>
</div>
@Html.AppendJsFile("/Areas/ProjectManager/Views/DC_EngineProject_ProjectInfo/Form1.js")
