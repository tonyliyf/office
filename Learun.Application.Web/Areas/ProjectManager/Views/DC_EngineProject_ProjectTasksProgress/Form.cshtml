@{
    ViewBag.Title = "DC_EngineProject_ProjectTasksProgress";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">任务编号</div>
        <input id="F_TaskItemNumber" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">任务名称</div>
        <input id="F_TaskName" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">计划完成日期</div>
        <input id="F_ActualStartDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_ActualStartDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">实际完成日期</div>
        <input id="F_ActualEndDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_ActualEndDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">项目阶段<font face="宋体">*</font></div>
        <div id="F_ProjectStage" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">施工进度<font face="宋体">*</font></div>
        <div id="F_ProgressState" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">附件</div>
        <div id="F_Attachments"></div>
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_EngineProject_ProjectTasksProgress">
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Remarks" class="form-control" style="height:150px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/ProjectManager/Views/DC_EngineProject_ProjectTasksProgress/Form.js")
