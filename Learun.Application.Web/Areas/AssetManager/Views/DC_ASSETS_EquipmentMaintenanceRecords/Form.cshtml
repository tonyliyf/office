@{
    ViewBag.Title = "DC_ASSETS_EquipmentMaintenanceRecords";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-4 lr-form-item" data-table="DC_ASSETS_EquipmentMaintenanceRecords">
        <div class="lr-form-item-title">维修单号</div>
        <input id="F_MaintenanceNumber" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-4 lr-form-item" data-table="DC_ASSETS_EquipmentMaintenanceRecords">
        <div class="lr-form-item-title">维修申请人<font face="宋体">*</font></div>
        <div id="F_ApplicationUserId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-4 lr-form-item" data-table="DC_ASSETS_EquipmentMaintenanceRecords">
        <div class="lr-form-item-title">维修申请日期<font face="宋体">*</font></div>
        <input id="F_ApplicationDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_ApplicationDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-4 lr-form-item" data-table="DC_ASSETS_EquipmentMaintenanceRecords">
        <div class="lr-form-item-title">设备名称<font face="宋体">*</font></div>
        <div id="F_EIId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-4 lr-form-item">
        <div class="lr-form-item-title">设备编号</div>
        <input readonly id="txt_code" type="text" class="form-control" />
    </div>
    <div class="col-xs-4 lr-form-item">
        <div class="lr-form-item-title">规格型号</div>
        <input readonly id="txt_type" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="DC_ASSETS_EquipmentMaintenanceRecords">
        <div class="lr-form-item-title">故障描述</div>
        <textarea id="F_FaultDescription" class="form-control" style="height:300px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/AssetManager/Views/DC_ASSETS_EquipmentMaintenanceRecords/Form.js")
