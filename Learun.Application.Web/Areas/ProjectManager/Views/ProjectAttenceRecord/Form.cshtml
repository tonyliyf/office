@{
    ViewBag.Title = "项目考勤记录";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">打卡人姓名<font face="宋体">*</font></div>
        <input id="F_CreateUserName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">所属项目<font face="宋体">*</font></div>
        <div id="F_ProjectId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">所在班组</div>
        <input id="F_Class" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">编号</div>
        <input id="Project_code" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">机器号</div>
        <input id="Project_mode" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">监理单位</div>
        <input id="F_SupervisionCompany" type="text" class="form-control" />
    </div>
    
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">施工单位</div>
        <input id="F_constructionCompany" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">考勤天数</div>
        <input id="Project_Attencedays" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">考勤号码</div>
        <input id="Project_Attencednumber" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">对比方式</div>
        <input id="Project_compare" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">上午打卡时间</div>
        <input id="F_FirstAttenceDateTime" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm:ss',onpicked: function () { $('#Project_AttenceDateTime').trigger('change'); } })" />
    </div>
    <div class="col-xs-6 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">下午打卡时间</div>
        <input id="F_SecondAttenceDateTime" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm:ss',onpicked: function () { $('#Project_AttenceDate').trigger('change'); } })" />
    </div>
    <div class="col-xs-12 lr-form-item" data-table="Project_AttenceRecord">
        <div class="lr-form-item-title">备注说明</div>
        <textarea id="F_Description" class="form-control" style="height:100px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/ProjectManager/Views/ProjectAttenceRecord/Form.js")
